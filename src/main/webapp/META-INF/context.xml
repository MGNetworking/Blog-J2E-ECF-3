<Context>
    <Resource
            name="jdbc/bloggy"

            auth="Container"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.dbcp.dbcp2.BasicDataSourceFactory"
            driverClassName="com.mysql.jdbc.Driver"

            username="${mysql.user}"
            password="${mysql.password}"
            url="${mysql.url}bloggy?serverTimezone=UTC"
    />
</Context>
